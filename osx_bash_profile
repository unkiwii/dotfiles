# to work with golang
export GOPATH=~/projects/go

export PATH=/usr/local/bin:$PATH:/opt/bin:~/SDKs/android-sdk/platform-tools:~/SDKs/android-sdk/tools:~/ant/bin:~/SDKs/android-ndk:$GOPATH/bin

# to work with tmux
if [ -f .projects.tmux ]; then
    source .projects.tmux
fi

# to work with git repos
if [ -f .gitprompt ]; then
    source .gitprompt
fi
export PS1="\n\[$txtgrn\]\w\[$txtrst\]\$git_prompt$ "

# to set color output on some commands (i.e. ls)
export CLICOLOR=1
