[user]
	name = lucas.sanchez
	email = lucas.sanchez@rappi.com
[push]
	default = nothing
[core]
	editor = vim
	pager = less -X -F
	excludesfile = ~/.gitignore
	ignorecase = false
[alias]
	co = checkout
	ci = commit
	st = status
	hist = log --pretty=format:\"%C(auto)%h %ad | %s%d [%an]%C(reset)\" --graph --date=short
	olog = log --pretty=format:\"%C(auto)%h %d %s | %C(white)%ae%C(reset) %C(yellow)%aD%C(reset)\" --decorate --graph -10
	merge = merge --ff-only
[web]
	browser = google-chrome
[credential]
	helper = cache --timeout=3600
[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/
[pull]
	rebase = true
