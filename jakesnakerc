function jakesnake
{
	BASE="$HOME/projects/jake-snake/mobile"
	cd $BASE

	tmux start-server
	tmux new-session -d -s jakesnake
	tmux new-window -t jakesnake:2 -n vim
	tmux new-window -t jakesnake:3 -n hg
	tmux new-window -t jakesnake:4 -n gdb

	tmux send-keys -t jakesnake:1 "cd $BASE; source ~/.bashrc; clear" C-m
	tmux send-keys -t jakesnake:2 "cd $BASE; source ~/.bashrc; clear; vim Classes/jake/jake.cpp" C-m
	tmux send-keys -t jakesnake:3 "cd $BASE; source ~/.bashrc; clear; hg st" C-m
	tmux send-keys -t jakesnake:4 "cd $BASE; source ~/.bashrc; clear; gdb ./proj.linux/bin/debug/JakeSnake" C-m

	tmux select-window -t jakesnake:2
	tmux attach-session -t jakesnake
}
