	default_color = "white",
	default_outline_color = "black",
	default_shade_color = "black",
	double_buffer = true,
	draw_borders = false,
	draw_graph_borders = false,
	draw_outline = false,
	draw_shades = true,
	extra_newline = false,
	font = "GoMono Nerd Font Mono:size=16",
